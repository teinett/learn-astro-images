---
import Layout from "@/layouts/Layout.astro";
---

<Layout searchpage>
    <h1>Search</h1>
    <aside class="search-form">
        <label for="search" class="sr-only">Search</label>
        <input
            type="search"
            required
            minlength="2"
            maxlength="50"
            name="search"
            id="search"
            class="search-input"
            data-search-input
            placeholder="Enter a search term..."
        />
        <button type="submit" data-search-btn>Search</button>
    </aside>
    <p id="searchReadout" data-search-readout></p>
    <section aria-label="Search Results">
        <ol id="searchResults" data-search-results></ol>
    </section>
</Layout>

<style is:global>
    #searchResults {
        list-style: none;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 0;
    }

    #searchResults .item {
        border: 1px solid #ccc;
        margin: 0;
        padding: 0;
    }

    #searchResults .title {
        font-weight: bold;
    }
</style>

<script>
    import "@/utils/search.js";
</script>
